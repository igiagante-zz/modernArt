<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <fragment
        android:id="@+id/gallery_fragment"
        android:name="com.example.ignaciogiagante.modernartui.GalleryFragment"
        tools:layout="@layout/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        />

    <fragment
        android:id="@+id/seekbar_fragment"
        android:name="com.example.ignaciogiagante.modernartui.SeekBarFragment"
        tools:layout="@layout/fragment_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
